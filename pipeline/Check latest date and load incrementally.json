											"type": "Expression"
										},
										"type": "Datetime"
									},
									"SourceTable": {
										"value": {
											"value": "@pipeline().parameters.data_source_table",
											"type": "Expression"
										},
										"type": "String"
									},
									"RowsCopied": {
										"value": {
											"value": "@activity('Incremental extract').output.rowsCopied",
											"type": "Expression"
										}
									}
								}
